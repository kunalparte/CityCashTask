<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Products.views.ProductDetailsActivity">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        android:layout_margin="16dp"
        android:id="@+id/imageDetailsCardView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        >

    <ImageView
        android:layout_width="328dp"
        android:layout_height="360dp"
        android:background="@color/colorPrimaryLight"
        android:id="@+id/productDetailImage"
        />
    </android.support.v7.widget.CardView>
    <TextView
        style="@style/TextViewCustomStyleLarger"
        android:id="@+id/productDetailCat"
        android:gravity="center_horizontal"
        android:text="Casual Shirts"
        android:layout_below="@+id/imageDetailsCardView"
        android:layout_marginTop="8dp"/>


    <TextView
        style="@style/TextViewCustomStyleMediumBold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/productDetailCatId"
        android:gravity="center_horizontal"
        android:text="Casual Shirts"
        android:layout_below="@+id/productDetailCat"
        android:layout_marginTop="8dp"/>

    <TextView
        style="@style/TextViewCustomStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/productDetailPrice"
        android:textSize="24sp"
        android:gravity="center_horizontal"
        android:text="500"
        android:layout_below="@+id/productDetailCatId"
        android:layout_marginTop="8dp"
        android:drawableLeft="@drawable/rupee_indian"
        android:drawablePadding="4dp"/>
    <TextView
        style="@style/TextViewCustomStyleMediumBold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/productDetailSize"
        android:gravity="left"
        android:text="500"
        android:layout_alignParentBottom="true"
        android:drawableLeft="@drawable/ic_linear_scale_black_24dp"
        android:drawablePadding="4dp"
        android:layout_marginBottom="40dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"/>

</RelativeLayout>