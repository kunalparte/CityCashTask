<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.kunalparte.citycashtask">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.App.Red"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".Products.views.ProductDetailsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Products.views.DashBoardActivity"
            android:label="@string/title_activity_main2"
            android:theme="@style/Theme.App.NoActionBar"
            android:windowSoftInputMode="stateAlwaysHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Products.views.FilterActivity"></activity>
    </application>

</manifest>